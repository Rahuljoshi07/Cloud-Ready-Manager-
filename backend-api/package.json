  "description": "RESTful API with Node.js, Express, and PostgreSQL",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "seed": "node seed.js",
    "docker:up": "docker-compose up -d",
